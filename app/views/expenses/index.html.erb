
<h1 class="text-2xl mb-3">Weekly Spending</h1>

<div><%= number_to_currency(@total_cost) %></div>
<div><%= @start_date.strftime('%d/%m/%y') %> to <%= @end_date.strftime('%d/%m/%y') %></div>

<%= link_to 'New expense', new_expense_path, class: 'btn btn-green mb-3' %>

<%= link_to "Previous Week", expenses_path(offset: @week_offset.to_i - 1) %>
<%= link_to "Next Week", expenses_path(offset: @week_offset.to_i + 1) %>


 
<table>
  <tr>
    <th>Title</th>
    <th>Cost</th>
    <th>Date</th>
    <th></th>
  </tr>
 
  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.title %></td>
      <td><%= number_to_currency expense.cost %></td>
      <td><%= expense.date.strftime('%d/%m/%y') %></td>
      <td><%= link_to 'Show', expense_path(expense) %></td>
      <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
      <td><%= link_to 'Destroy', expense_path(expense),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
