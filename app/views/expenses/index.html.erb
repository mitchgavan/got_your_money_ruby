
<h1>Listing Expenses</h1>


<%= link_to 'New expense', new_expense_path %>

<div>Total spent: <%= @total_cost %></div>
<div><%= @start_date %> to <%= @end_date %></div>
 
<table>
  <tr>
    <th>Title</th>
    <th>Cost</th>
    <th>Date</th>
    <th></th>
  </tr>
 
  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.title %></td>
      <td><%= expense.cost %></td>
      <td><%= expense.date %></td>
      <td><%= link_to 'Show', expense_path(expense) %></td>
      <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
      <td><%= link_to 'Destroy', expense_path(expense),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Previous Week", expenses_path(offset: @week_offset.to_i - 1) %>
<%= link_to "Next Week", expenses_path(offset: @week_offset.to_i + 1) %>
