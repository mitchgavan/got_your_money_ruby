<%= form_with model: @expense, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'border' %>
  </div>

  <div class="mb-4">
    <%= form.label :cost %>
    <%= form.number_field :cost, class: 'border' %>
  </div>
 
  <div class="mb-6">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'border' %>
  </div>
 
  <div class="mb-4">
    <%= form.submit class: 'btn btn-green' %>
  </div>
<% end %>